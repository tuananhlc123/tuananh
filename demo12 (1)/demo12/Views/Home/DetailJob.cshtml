@using Microsoft.AspNetCore.Identity
@model demo12.Models.JobV

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Job</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.job.Title
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.job.Description
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.job.Location
        </dd>
        <dt class="col-sm-2">
            Industry
        </dt>
        <dd class="col-sm-10">
            @Model.job.Industry
        </dd>
        <dt class="col-sm-2">
            Requiered
        </dt>
        <dd class="col-sm-10">
            @Model.job.Requiered
        </dd>
        <dt class="col-sm-2">
            Deadline
        </dt>
        <dd class="col-sm-10">
            @Model.job.Deadline
        </dd>
        <dt class="col-sm-2">
            Salary
        </dt>
        <dd class="col-sm-10">
            @Model.job.Salary
        </dd>
        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.job.DImage" alt="ImageUrl" style="width:100px; height:auto">
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Home" asp-action="CreateCV" asp-route-id="@Model.job.Id">Apply for this position</a>
</div>
