@using Microsoft.AspNetCore.Identity
@model demo12.Models.Job

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>



<body>
    <div class="container mt-5">
        <h2 class="mb-4">Job Delete Form</h2>
        <form asp-action="DeleteJob" asp-controller="Employee">
            <input asp-for="UserId" />
            <div>
                <h4>Job</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Title
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Title
                    </dd>
                    <dt class="col-sm-2">
                        Description
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Description
                    </dd>
                    <dt class="col-sm-2">
                        Location
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Location
                    </dd>
                    <dt class="col-sm-2">
                        Industry
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Industry
                    </dd>
                    <dt class="col-sm-2">
                        Requiered
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Requiered
                    </dd>
                    <dt class="col-sm-2">
                        Deadline
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Deadline
                    </dd>
                    <dt class="col-sm-2">
                        Salary
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Salary
                    </dd>
                    <dt class="col-sm-2">
                        Photo
                    </dt>
                    <dd class="col-sm-10">
                        @Model.DImage
                    </dd>
                </dl>
            </div>
            <button type="submit" class="btn btn-danger mt-2">Delete</button>
        </form>
    </div>
</body>