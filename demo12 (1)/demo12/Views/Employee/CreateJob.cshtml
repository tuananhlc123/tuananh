@model Job
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Posting Form</title>
    <!-- Bootstrap CSS -->
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Job Posting Form</h2>
        <form asp-action="CreateJob" enctype="multipart/form-data">
            <input value="@ViewBag.UserId" asp-for="UserId">
            <div class="form-group">
                <label asp-for="Title">Job Title</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Enter job title">
            </div>
            <div class="form-group">
                <label asp-for="Location">Location</label>
                <input type="text" class="form-control" asp-for="Location" placeholder="Enter location" required>
            </div>
            <div class="form-group">
                <label asp-for="Industry">Company</label>
                <input type="text" class="form-control" asp-for="Industry" placeholder="Enter industry" required>
            </div>
            <div class="form-group">
                <label asp-for="Description">Info</label>
                <input type="text" class="form-control" asp-for="Description" placeholder="Enter info" required>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Requiered">Required Skill</label>
                    <input type="text" class="form-control" asp-for="Requiered" placeholder="Enter required skill" required>
                </div>
               
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Salary">Price</label>
                    <input type="number" class="form-control" asp-for="Salary" placeholder="Enter price" required>
                </div>                
            </div>            
            <div class="form-group">
                <label asp-for="Deadline">Application Deadline</label>
                <input type="date" class="form-control" asp-for="Deadline" required>
            </div>
            <div class="form-group">
                <label asp-for="Jmage">Photo</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="imageInput" asp-for="Jmage" accept="image/*" required>
                    </div>                    
                </div>                
            </div>            
            <button type="submit" class="btn btn-primary mt-2">Create</button>
        </form>
    </div>    
</body>
</html>
@section Scripts {
    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
